---
import { SITE_TITLE } from '../consts';

const { activeMenu } = Astro.props;
---

<header>
  <nav class="navbar navbar-expand-md bg-primary navbar-dark navbar-fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">{SITE_TITLE}</a>

      <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar"
            aria-expanded="false" aria-controls="collapsibleNavbar" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div id="collapsibleNavbar" class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class={activeMenu === 'Blog' ? 'nav-link active' : 'nav-link'} href="/"><i class="bi bi-newspaper"></i> Blog</a>
          </li>
          <li class="nav-item">
            <a class={activeMenu === 'Projects' ? 'nav-link active' : 'nav-link'} href="/projects/"><i class="bi bi-diagram-3"></i> Projects</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
